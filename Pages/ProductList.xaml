<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApiRest.Pages.ProductList"
             Title="Product List">
    <FlexLayout Direction="Column">
        <Frame Margin="5" Padding="5" FlexLayout.Basis="600">
            <VerticalStackLayout Padding="10">
                <Entry Text="Nome" Placeholder="Nome" />
                <Entry Text="Descricao" Placeholder="Descricao"  />
                <Entry Text="Preco"  Placeholder="Preco" />

                <Button Text="Add Product" Margin="10" />
            </VerticalStackLayout>
        </Frame>
    </FlexLayout>
    
</ContentPage>